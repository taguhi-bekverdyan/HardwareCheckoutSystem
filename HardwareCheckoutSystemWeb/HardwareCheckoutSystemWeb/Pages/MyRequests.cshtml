@page
@model HardwareCheckoutSystemWeb.Pages.MyRequestsModel
@{
    ViewData["Title"] = "MyRequests";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="container-fluid">
            <h2 class="text-center">Received devices</h2>
            <div class="table-responsive">
                @if (Model.ReceivedDevices.Count != 0)
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Device Id</th>
                                <th>Device Brand</th>
                                <th>Device Model</th>
                                <th>Request Date</th>
                                <th>Rent start date</th>
                                <th>Rent end date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ReceivedDevices)
                            {
                                <tr>
                                    <td>@item.Id.ToString().Split("-")[0]</td>
                                    <td>@item.Device.Id.ToString().Split("-")[0]</td>
                                    <td>@item.Device.Brand.Name</td>
                                    <td>@item.Device.Model</td>
                                    <td>@item.RequestDate</td>
                                    <td>@item.RentStartDate</td>
                                    <td>@item.RentEndDate</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <h2>you have no received devices</h2>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="container-fluid">
            <h2 class="text-center">Requests</h2>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Firstname</th>
                            <th>Lastname</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>John</td>
                            <td>Doe</td>
                            <td>john@example.com</td>
                            <td class="center-block">
                                <div class="center-block">
                                    <button type="button" class="btn btn-primary btn-md">Edit</button>
                                    <button type="button" class="btn btn-danger btn-md">Cancel</button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>Mary</td>
                            <td>Moe</td>
                            <td>mary@example.com</td>
                            <td>
                                <div class="row center-block">
                                    <button type="button" class="btn btn-primary btn-md">Edit</button>
                                    <button type="button" class="btn btn-danger btn-md">Cancel</button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>July</td>
                            <td>Dooley</td>
                            <td>july@example.com</td>
                            <td>
                                <div class="row center-block">
                                    <button type="button" class="btn btn-primary btn-md">Edit</button>
                                    <button type="button" class="btn btn-danger btn-md">Cancel</button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="container-fluid">
            <h2 class="text-center">History</h2>
            <div class="table-responsive">
                @if (Model.History.Count != 0)
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Device Id</th>
                                <th>Device Brand</th>
                                <th>Device Model</th>
                                <th>Device Description</th>
                                <th>Request Date</th>
                                <th>Rent start date</th>
                                <th>Rent end date</th>
                                <th>Request Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.History)
                            {
                                <tr>
                                    <td>@item.Id.ToString()</td>
                                    <td>@item.Device.Id.ToString()</td>
                                    <td>@item.Device.Brand.Name</td>
                                    <td>@item.Device.Model</td>
                                    <td>@item.Device.Description</td>
                                    <td>@item.RequestDate</td>
                                    <td>@item.RentStartDate</td>
                                    <td>@item.RentEndDate</td>
                                    <td>@item.Status</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <h2>You have no history</h2>
                }
            </div>
        </div>
    </div>
</div>

