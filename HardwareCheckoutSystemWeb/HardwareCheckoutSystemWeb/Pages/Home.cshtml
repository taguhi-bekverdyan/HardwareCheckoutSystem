@page
@model HardwareCheckoutSystemWeb.Pages.HomeModel
@{
    ViewData["Title"] = "Home";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<div class="container-fluid">

    <div class="row">
        <div class="col-sm-9 col-md-6 col-lg-8 col-xl-10 bg-success">
            <div class="container-fluid">
                <h2>All Devices</h2>                
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>SN</th>
                            <th>Model</th>
                            <th>Description</th>
                            <th>EndDate</th>
                            <th>Status</th>
                            <th>Permission</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var deviceRow in Model.Devices)
                    {
                        <tr>
                            <td>@deviceRow.SerialNumber</td>
                            <td>@deviceRow.Model</td>
                            <td>@deviceRow.Description</td>
                            <td>@deviceRow.MaxPeriod</td>
                            <td>@deviceRow.Status</td>
                            <td>@deviceRow.Permission</td>
                            <td>Image</td>
                            <td>
                                <button type="button" class="btn btn-primary btn-md  center-block">Request</button>
                            </td>
                        </tr>
                    }

                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2 bg-warning">
            <div class="container-fluid">
                <h2>Request statuses</h2>
                <div class="panel-group" id="accordion">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">Request 1</a>
                            </h4>
                        </div>
                        <div id="collapse1" class="panel-collapse collapse in">
                            <div class="panel-body">
                                Request info
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">Request 2</a>
                            </h4>
                        </div>
                        <div id="collapse2" class="panel-collapse collapse">
                            <div class="panel-body">
                                Request info
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapse3">Request 3</a>
                            </h4>
                        </div>
                        <div id="collapse3" class="panel-collapse collapse">
                            <div class="panel-body">
                                Request info
                            </div>
                        </div>
                    </div>
                </div>     
                <button type="button" class="btn btn-primary btn-md pull-right" >Open</button>
            </div>
            
        </div>
    </div>

</div>



